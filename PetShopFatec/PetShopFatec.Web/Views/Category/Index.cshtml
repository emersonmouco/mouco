@model IEnumerable<PetShopFatec.Web.Models.Entities.CategoryViewModel>

<h2>Categories</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <div class="pull-left">
                    <a asp-action="CreateCategory" class="btn btn-primary">
                        <span title="Create New" class="fas fa-plus"></span> New Category
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container text-center">

    <br />
    <div class="panel panel-default">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td align="center">
                            <a asp-action="UpdateCategory" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                                <span class="fas fa-edit"></span>
                            </a>
                            <a asp-action="DeleteCategory" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                                <span class="fas fa-trash-alt"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
