@model IEnumerable<PetShopFatec.Web.Models.Entities.ProductViewModel>

    <h2>Products</h2>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div>
                    <div class="pull-left">
                        <a asp-action="CreateProduct" class="btn btn-primary">
                            <span title="Create New" class="fas fa-plus"></span> New Product
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container text-center">

        <br />
        <div class="panel panel-default">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td align="center">
                                <a asp-action="UpdateProduct" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                                    <span class="fas fa-edit"></span>
                                </a>
                                <a asp-action="DeleteProduct" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                                    <span class="fas fa-trash-alt"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
